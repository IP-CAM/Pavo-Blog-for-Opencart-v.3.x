{{ header }}{{ column_left }}
<div id="content">
  	<div class="page-header">
	    <div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-settings" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Save"><i class="fa fa-save"></i></button>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
			{% endfor %}
			</ul>
		</div>
  	</div>
  	<div class="container-fluid">
		{% if errors.error_warning %}
		    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ errors.error_warning }}
	      		<button type="button" class="close" data-dismiss="alert">&times;</button>
		    </div>
	    {% endif %}
	    {% if success %}
		    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
		      	<button type="button" class="close" data-dismiss="alert">&times;</button>
		    </div>
	    {% endif %}
	    <div class="row">
			<div class="col-xs-12">
		    	<div class="panel panel-default">
		    		<div class="panel-heading">
			        	<h3 class="panel-title"><i class="fa fa-pencil"></i>{{ edit_settings }}</h3>
			      	</div>
					<div class="panel-body">
						<form action="{{ save_action }}" method="post" enctype="multipart/form-data" class="form-horizontal" id="form-settings">
						  	<fieldset>
						  		<legend>{{ text_posts }}</legend>
						  		<div class="form-group required">
					              	<label class="col-sm-2 control-label" for="input-catalog-limit"><span data-toggle="tooltip" title="" data-original-title="{{ entry_default_items_title }}">{{ entry_default_items }}</span></label>
					              	<div class="col-sm-10">
					                	<input type="number" step="1" min="1" name="pavoblog_post_limit" value="{{ settings.pavoblog_post_limit is defined ? settings.pavoblog_post_limit : 10 }}" placeholder="{{ entry_default_items_plc }}" id="input-catalog-limit" class="form-control">
					                	{% if errors.error_pavoblog_post_limit %}
											<div class="text-danger">{{ errors.error_pavoblog_post_limit }}</div>
										{% endif %}
	                              	</div>
					            </div>
					            <div class="form-group required">
					              	<label class="col-sm-2 control-label" for="input-description-limit"><span data-toggle="tooltip" title="" data-original-title="{{ entry_limit_desc_title }}">{{ entry_desc_limit }}</span></label>
					              	<div class="col-sm-10">
						                <input type="number" step="1" min="1" name="pavoblog_post_description_length" value="{{ settings.pavoblog_post_description_length is defined ? settings.pavoblog_post_description_length : 100 }}" placeholder="{{ entry_desc_limit_plc }}" id="input-description-limit" class="form-control">
						                {% if errors.error_pavoblog_post_description_length %}
											<div class="text-danger">{{ errors.error_pavoblog_post_description_length }}</div>
										{% endif %}
	                              	</div>
					            </div>
						  	</fieldset>
						  	<fieldset>
						  		<legend>{{ text_images }}</legend>
						  		<div class="form-group required">
					              	<label class="col-sm-2 control-label" for="input-image-thumb-width">{{ entry_post_image_thumb }}</label>
					              	<div class="col-sm-10">
						                <div class="row">
						                  	<div class="col-sm-6">
						                    	<input type="number" step="1" min="1" name="pavoblog_image_thumb_width" value="{{ settings.pavoblog_image_thumb_width is defined ? settings.pavoblog_image_thumb_width : 228 }}" placeholder="{{ text_width }}" id="input-image-thumb-width" class="form-control">
							                  	{% if errors.error_pavoblog_image_thumb_width %}
													<div class="text-danger">{{ errors.error_pavoblog_image_thumb_width }}</div>
												{% endif %}
						                  	</div>
						                  	<div class="col-sm-6">
						                    	<input type="number" step="1" min="1" name="pavoblog_image_thumb_height" value="{{ settings.pavoblog_image_thumb_height is defined ? settings.pavoblog_image_thumb_height : 228 }}" placeholder="{{ text_height }}" class="form-control">
							                  	{% if errors.error_pavoblog_image_thumb_height %}
													<div class="text-danger">{{ errors.error_pavoblog_image_thumb_height }}</div>
												{% endif %}
						                  	</div>
						                </div>
	                              	</div>
					            </div>
						  	</fieldset>
						</form>
					</div>
		    	</div>
		  	</div>
		</div>
  	</div>
</div>
{{ footer }}